# Trinity Management System Backend Environment Configuration 
  
# Server Configuration  
PORT=5000  
NODE_ENV=development 
  
# MongoDB Configuration  
# Replace with your own MongoDB connection string
MONGODB_URI=mongodb+srv://{{MONGO_USER}}:{{MONGO_PASSWORD}}@your-cluster.mongodb.net/your_database?retryWrites=true&w=majority 
  
# JWT Configuration  
# Replace with a long, random secret in your real .env (never commit the real value)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure  
JWT_EXPIRE=30d 
  
# Security Configuration  
BCRYPT_ROUNDS=12  
RATE_LIMIT_WINDOW=15  
RATE_LIMIT_MAX=100 
  
# CORS Configuration  
CORS_ORIGIN=http://localhost:3002  
CORS_ORIGIN_PROD=https://your-frontend-domain.com 
  
# API Configuration  
API_VERSION=v1  
API_PREFIX=/api 
  
# Updated CORS Configuration  
CORS_ORIGIN=http://localhost:3002  
CORS_ORIGIN_PROD=http://localhost:3002 
